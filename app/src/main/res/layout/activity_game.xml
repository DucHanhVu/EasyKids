<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pooh_sleep"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:context="com.example.quynhon.easykids.GamePackage.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/khung"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/pomegranate"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_title_question"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/text_bkg"
            android:gravity="center"
            android:text="@string/question_alpha"
            android:textColor="@color/pomegranate"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_question"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/a" />

    <LinearLayout
        android:id="@+id/layout_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"/>
</LinearLayout>
